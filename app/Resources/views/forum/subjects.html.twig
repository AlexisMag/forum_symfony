{% extends 'base.html.twig' %}

{% block body %}

<h1>
    {{title}}
</h1>

<div >
    <a href="{{path('create_subject', {'forum_id':forum.id})}}" role="button" class="btn btn-success">
        New subject
    </a>
</div>
<br>
<div class="panel panel-default">
    <ul class="list-group">
        {% for subject in forum.subjects %}
            <li class="list-group-item">
                <a href="{{path('messages', {'slug':subject.slug} )}}">
                    {{subject.title}}
                </a>
                <br>
                <small>
                    {% if subject.subtitle %}
                        {{subject.subtitle}}
                    {% else %}
                        &nbsp;
                    {% endif %}
                </small>
            </li>
        {% else %}
            <li class="list-group-item text-center lead">
                No subject
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
